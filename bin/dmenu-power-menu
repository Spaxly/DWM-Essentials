case "$(echo -e "Shutdown\nRestart\nLogout\nSuspend\nLock" | dmenu \
    -nb "${COLOR_DEFAULT:-#1d1d2d}" \
    -sf "${COLOR_HIGHLIGHT:-#89dceb}" \
    -sb "#1d1d2d" \
    -f -p \
    "Power:" -l 5)" in
        Shutdown) exec systemctl poweroff;;
        Restart) exec systemctl reboot;;
        Logout) exec loginctl terminate-session ${XDG_SESSION_ID-};;
        Suspend) exec systemctl suspend;;
        Lock) exec systemctl --user start lock.target;;
esac
